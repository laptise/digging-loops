{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@entities": ["../types/entities.d.ts"],
      "@dtos": ["../types/dtos.d.ts"],
      "@components/*": ["./components/*"],
      "@auth": ["./ssr/auth"],
      "@networks/*": ["./networks/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./node_modules/wicg-file-system-access/index.d.ts"],
  "exclude": ["node_modules"]
}
